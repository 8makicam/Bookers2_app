<div class='body'>
 <div class='container'>

  <p id="notice"></p>

   <div class='row'>
	<div class='col-md-6 col-md-offset-3'>
	 <h1>Editing Book</h1>

	 <%= render 'books/error', books: @book %>

	 <%= form_for(@book) do |f| %>
  	  <div class="field row">
       <h4>Title</h4>
       <%= f.text_field :title, size: "78"  %>
      </div>

      <div class="field row">
       <h4>Opinion</h4>
       <%= f.text_area :body, size: "80x2" %>
      </div>

      <br>

     <div class="actions row">
      <button type="submit" class="btn btn-primary btn-block">Update Book</button>
     </div>