<div class="container">
  <div class="row">
   <div class="col-md-3 offset-md-">
    <div class="row">
    <%= render 'users/list', user: current_user, book: @new_book %>
    </div>
   </div>

  <div class="col-md-8 offset-md-1">
   <h3>Book detail</h3>
    <table class='table table-hover table-inverse'>
　   <tbody>
　　  <tr>
       <td>
        <%= link_to(user_path(@book.user)) do %>
        <% if @book.user == current_user %>
        <%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
        <% else %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
        <% end %>
        <div>
        <%= @book.user.name %><% end %>
        </div>
       </td>
       <td><%= link_to(book_path(@book)) do %>
                 <%= @book.title %>
               <% end %>
       </td>
　　　 <td><%= @book.body %>
　　　 </td>
         <% if @book.user == current_user %>
          <%= link_to edit_user_path(current_user.id) do %>
            <td><%= link_to 'Edit', edit_book_path(@book), method: :get, class: "btn btn-success btn-xs text_light" %></td>
          <% end %>
           <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, class: "btn btn-danger btn-xs text_light" %></td>
         <% end %>
　　　 </tr>
　    </tbody>
     </table>

  </div>
 </div>
</div>
