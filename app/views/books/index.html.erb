<% @books.each do |book| %>
<div>
  <p>User：<%= book.user.name %></p>
  <p>TITLE：<%= book.title %></p>
  <p>BODY：<%= book.body %></p>
</div>
<% end %>

<h1>投稿フォーム</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>TITLE</h4>
  <%= f.text_field :title %>
  <h4>BODY</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>