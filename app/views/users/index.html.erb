<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="row">
             <%# UserInfo NewBook %>
             <%= render 'users/list', user: current_user, book: @new_book %>
            </div>
        </div>
        
        <div class="col-md-8 offset-md-1">
        <h2> Users </h2>
         <table class="table table-hover table-inverse">
          <thead>
           <tr>
            <th> image </th>
            <th> name </th>
            <th colspan="3"></th>
           </tr>
          </thead>
          <% @users.each do |user| %>
        <tr>
           <td>
             <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size:'40x40' %>
           </td>
           <td><%= user.name %></td>
           <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
         <% end %>
         </table>
    </div>
</div>