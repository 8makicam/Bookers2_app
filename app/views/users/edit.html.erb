<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <% end %>
  
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>User info</h1>
  		
　　　<%= form_with model: @user, local:true do |f| %>
      <div class="field row">
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name, :class => 'form-control user_name' %>
      </div>
      
     
      <div class="field row">
       <label>Image</label>
       <%= f.attachment_field :profile_image_ %>
      </div>
    
      <div class="field row">
       <%= f.label :introduction, 'Introduction' %>
       <%= f.text_area :introduction, :class => 'form-control user_introduction' %>
      </div>
    
    <br>
    
    <div class="actions row">
      <%= f.submit "Update User", :class => 'btn btn-success ' %>
    </div>
  <% end %>
      </div>
      </div>
    </div>
  </div>
</div>