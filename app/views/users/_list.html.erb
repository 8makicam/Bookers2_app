<div class="col-xs-3">
  <h2> User info </h2>
  <%= attachment_image_tag user, :profile_image, size: '100x100', fallback: 'no_image.jpg' %>
  <table class="table">
    <tbody>
      <tr>
        <th> name </th>
        <th> <%= user.name %> </th>
      </tr>
      <tr>
        <th> introduction </th>
        <th> <%= user.profile %> </th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%# if user.id == current_user.id %>
      <%= link_to '編集', edit_user_path(user.id), :class => 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
    <%# else %>
      <%#= link_to '', user_path(user.id), :class => 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
    <%# end %>
  </div>
  <h2> New book</h2>
  <%= form_with model: @book, local:true do |f| %>
    <div class="field row">
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title, :class => 'col-xs-12' %>
    </div>
    <div class="field row">
      <%= f.label :body, 'Opinion' %>
      <%= f.text_area :body, :class => 'col-xs-12' %>
    </div>
    <div class="actions row">
      <%= f.submit "Create Book", :class => 'btn btn-success col-xs-12' %>
    </div>
  <% end %>
</div>